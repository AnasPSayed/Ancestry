
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Ancestry.Models.LoginViewModel

<div class="login-page">
    <div class="form">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "name" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <button>login</button>
            <p class="message">Not registered? <a href="@Url.Action("Register","Account")">Create an account</a></p>
        }
    </div>
</div>
