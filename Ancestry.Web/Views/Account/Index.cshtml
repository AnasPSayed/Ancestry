@model Ancestry.Models.LoginViewModel

<div class="login-page">
    <div class="form">       
        
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "register-form" }))
        {
            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "name" })
            @Html.TextBoxFor(m => m.Password, new { @placeholder = "password" })
            <button>create</button>
            <p class="message">Already registered? <a href="#">Sign In</a></p>
        }

       
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "name" })
            @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password" })
            <button>login</button>
            <p class="message">Not registered? <a href="#">Create an account</a></p>
        }
    </div>
</div>
<script>
    $('.message a').click(function () {
        $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
    });
</script>
